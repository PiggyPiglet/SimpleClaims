$C = "../Common.ui";

$C.@PageOverlay {

  $C.@DecoratedContainer {
    Anchor: (Width: 340, Height: 380);

    #Title {

      TextButton #BackButton {
        Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
        Padding: (Left: 8, Top: 2);
        Text: "< Back";
        Style: TextButtonStyle(
          Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
          Sounds: $C.@ButtonSounds,
        );
        Background: #000000(0.13);
      }

      Group {
        $C.@Title #TitleText{
          @Text = "PERMISSION SETTINGS";
        }

      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;
        Padding: (Left: 40);
          $C.@CheckBoxWithLabel #PlaceBlocks {
            @Text = "Place Blocks";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #BreakBlocks {
            @Text = "Break Blocks";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractBlocks {
            @Text = "Interact Blocks";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractChest {
            @Text = "Interact Chests";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractDoor {
            @Text = "Interact Doors";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractBench {
            @Text = "Interact Benches";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractChair {
            @Text = "Interact Chairs";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractPortal {
            @Text = "Interact Portals";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #ModifyInfo {
            @Text = "Modify Party Info";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #ClaimUnclaim {
            @Text = "Claim/Unclaim";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InvitePlayers {
            @Text = "Invite Players";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #AddAllies {
            @Text = "Add Allies";
            Padding: (Bottom: 4);
          }
      }
    }
  }
}

$C.@BackButton {}
